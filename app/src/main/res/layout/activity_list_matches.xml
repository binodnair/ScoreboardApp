<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListMatches">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/leagueButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/btnFWCWL"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="FWCWL"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="35dp" />

        <Button
            android:id="@+id/btnFT20"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="FT20"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="35dp" />

        <Button
            android:id="@+id/btnTPL"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="TPL"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="35dp" />

        <Button
            android:id="@+id/btnTCL"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="TCL"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="35dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/leagueButtonGroup"
        >
            <TableLayout
                android:id="@+id/matchListTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/leagueButtonGroup"
                android:background="@drawable/border1"
                tools:layout_editor_absoluteX="5dp">
            </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>